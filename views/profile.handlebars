<div class="row">
  <div class="col-auto">
    <h2>Welcome, Chef {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Search for recipes here, and add your favorites to your Cookbook!</h3>
    <form class="searchBtn"  method="GET" id="get-recipe ingredients">
        <input type="text" placeholder="Search recipes by keyword: " name="search">
        <button id="btn1" type="search"><i class="fa fa-search"></i></button>
    </form>

    <form class="searchBtn" method="GET" id="recipe-list">
        <input type="text" placeholder="Search recipes by specific ingredients: " name="search">
        <button id="btn2" type="search"><i class="fa fa-search"></i></button>
    <form class="searchBtn" action="/search/recipe">
        <input type="text" placeholder="Search recipes by keyword: " name="search">
        <button id="btn1" type="submit"><i class="fa fa-search"></i></button>
    </form>

    <form class="searchBtn" action="">
        <input type="text" placeholder="Search recipes by specific ingredients: " name="search">
        <button id="btn2" type="submit"><i class="fa fa-search"></i></button>
    </form>
  </div> 
</div>

  
  {{#if profiles.length}}
  <div class="col-md-6 project-list">
    <h3>Current Recipes:</h3>

    {{#each profiles as |profile|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/profile/{{profile.id}}">{{profile.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{profile.id}}">DELETE</button>
<div>
  <h2>Add to your Cookbook here!</h2>
    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">Recipe Name:</label>
        <input class="form-input" type="text" id="recipe-name" name="recipe-name" />
      </div>
      <div class="form-group">
        <label for="recipe-ingredients">Ingredients:</label>
        <input class="form-input" type="text" id="recipe-ingredients" name="recipe-ingredients" />
      </div>
      <div class="form-group">
        <label for="recipe-desc">Instructions:</label>
        <textarea class="form-input" id="recipe-desc" name="recipe-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Recipe</button>
      </div>
    </form>
</div>  

  {{body}}    

<div>
  {{#if Recipes.length}}
  <div class="col-md-6 project-list">
    <h3>Current Recipes:</h3>

    {{#each recipes as |recipe|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/project/{{recipe.id}}">{{recipe.title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
</div>


<script src="./js/profile.js"></script>
