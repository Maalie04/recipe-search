<div class="recipeCard">
  <button id="cancelBtn" class="btn btn-danger saveBtn">Cancel</button>
  <button
    id="saveBtn"
    class="btn btn-primary saveBtn"
    type="submit"
  >Save</button>
  <h2 id="recTitle">{{{title}}}</h2>
  <p id="recDescription">{{{description}}}</p>

  <p id="recIngredients" class="ingredients">
    {{#each ingredients as |ingredient|}}

      {{{ingredient}}}
      <br />
    {{/each}}
  </p>

  <p id="recSteps" class="steps">
    {{#each steps as |step|}}

      {{{step}}}
      <br />
    {{/each}}
  </p>

</div>

<script src="/js/recipe.js"></script>