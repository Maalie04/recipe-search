<div class='text-center'>
  <h2>{{recipe.title}}</h2>
  <p>{{recipe.description}}</p>

  <p class='ingredients'>
    {{#each recipe.ingredients as |ingredient|}}

      {{ingredient}}
    {{/each}}
  </p>

  <p class='steps'>
    {{#each recipe.steps as |step|}}

      {{step}}
    {{/each}}
  </p>

</div>